<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="com.apkakisan.myapplication.registration.LoginActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230dp"
            android:layout_marginTop="@dimen/_40dp"
            android:src="@drawable/nature_image"
            android:transitionName="logo_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/welcome_to_apkakisan"
            android:textColor="#000"
            android:textSize="@dimen/_20sp"
            android:transitionName="logo_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/slogan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/sign_in_with_phone_no"
            android:textColor="#92929D"
            android:textSize="@dimen/_16sp"
            android:transitionName="logo_desc" />

        <include
            android:id="@+id/layoutPhone"
            layout="@layout/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneError"
            style="@style/TextView.FormField.Error"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@drawable/shape_bg_btn_green"
            android:fontFamily="@font/poppins_regular"
            android:onClick="loginUser"
            android:text="@string/sign_in_with_otp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/_16sp"
            android:transitionName="button_tran"
            app:backgroundTint="#46AA42" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@drawable/rounded_button_outline"
            android:elevation="2dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:onClick="callSignUpScreen"
            android:text="@string/new_user"
            android:textAllCaps="false"
            android:textColor="#46AA42"
            android:textSize="@dimen/_16sp"
            android:transitionName="login_signup_tran"
            app:backgroundTint="@color/white" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>