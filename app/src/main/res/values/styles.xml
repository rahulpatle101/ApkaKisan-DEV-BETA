<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#d9b948</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!--    constraint layout styles-->
    <style name="ConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintLayout.PhoneNo" parent="ConstraintLayout">
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:background">@drawable/shape_edittext_form</item>
    </style>

    <style name="ConstraintLayout.Profile.Field" parent="ConstraintLayout">
        <item name="android:minHeight">@dimen/_54dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
    </style>

    <style name="ConstraintLayout.EditProfile.Field" parent="ConstraintLayout">
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:background">@drawable/shape_edittext_form</item>
    </style>

    <!--    image view styles-->
    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.ProfileOption" parent="TextView">
        <item name="android:layout_width">@dimen/_50dp</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:background">@drawable/shape_bg_profile_option_green</item>
        <item name="android:padding">@dimen/_10dp</item>
    </style>

    <!--    text view styles-->
    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextView.ProfileOption" parent="TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="TextView.FormField.Heading" parent="TextView">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="TextView.FormField.Error" parent="TextView">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <!--    edit text styles-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="EditText.FormField" parent="EditText">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape_edittext_form</item>
    </style>

    <!--    button styles-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_54dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Submit" parent="Button">
        <item name="android:background">@drawable/shape_bg_btn_green</item>
        <item name="android:layout_marginBottom">@dimen/_40dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

</resources>
